<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/layout_header"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?attr/colorPrimary"
	android:orientation="vertical">

	<View
		android:id="@id/header_v_status_bar"
		android:layout_width="match_parent"
		android:layout_height="0dp"/>

	<RelativeLayout
		android:id="@+id/header"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:descendantFocusability="blocksDescendants"
		android:orientation="horizontal">

		<FrameLayout
			android:id="@+id/header_layout_left0"
			android:layout_width="wrap_content"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/header_tv_left0"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:background="?attr/selectableItemBackground"
				android:ellipsize="end"
				android:gravity="center"
				android:minWidth="?attr/actionBarSize"
				android:padding="8dp"
				android:singleLine="true"
				android:textColor="@android:color/white"
				android:visibility="invisible"/>

			<View
				android:id="@+id/header_v_dot_left0"
				android:layout_width="8dp"
				android:layout_height="8dp"
				android:layout_gravity="right|top"
				android:layout_marginRight="8dp"
				android:layout_marginTop="8dp"
				android:background="@drawable/header_dot_background"
				android:visibility="gone"/>

			<TextView
				android:id="@+id/header_tv_dot_num_left0"
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:layout_gravity="right|top"
				android:layout_marginRight="4dp"
				android:layout_marginTop="4dp"
				android:background="@drawable/header_dot_background"
				android:gravity="center"
				android:text="0"
				android:textColor="@android:color/white"
				android:textSize="12sp"
				android:visibility="gone"/>
		</FrameLayout>

		<FrameLayout
			android:id="@+id/header_layout_left1"
			android:layout_width="wrap_content"
			android:layout_toRightOf="@+id/header_layout_left0"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/header_tv_left1"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:background="?attr/selectableItemBackground"
				android:ellipsize="end"
				android:gravity="center"
				android:minWidth="?attr/actionBarSize"
				android:padding="8dp"
				android:singleLine="true"
				android:textColor="@android:color/white"
				android:visibility="invisible"/>

			<View
				android:id="@+id/header_v_dot_left1"
				android:layout_width="8dp"
				android:layout_height="8dp"
				android:layout_gravity="right|top"
				android:layout_marginRight="8dp"
				android:layout_marginTop="8dp"
				android:background="@drawable/header_dot_background"
				android:visibility="gone"/>

			<TextView
				android:id="@+id/header_tv_dot_num_left1"
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:layout_gravity="right|top"
				android:layout_marginRight="4dp"
				android:layout_marginTop="4dp"
				android:background="@drawable/header_dot_background"
				android:gravity="center"
				android:text="0"
				android:textColor="@android:color/white"
				android:textSize="12sp"
				android:visibility="gone"/>
		</FrameLayout>

		<FrameLayout
			android:id="@+id/header_layout_right1"
			android:layout_toLeftOf="@+id/header_layout_right0"
			android:layout_width="wrap_content"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/header_tv_right1"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:background="?attr/selectableItemBackground"
				android:ellipsize="end"
				android:gravity="center"
				android:minWidth="?attr/actionBarSize"
				android:padding="8dp"
				android:singleLine="true"
				android:textColor="@android:color/white"
				android:visibility="invisible"/>

			<View
				android:id="@+id/header_v_dot_right1"
				android:layout_width="8dp"
				android:layout_height="8dp"
				android:layout_gravity="right|top"
				android:layout_marginRight="8dp"
				android:layout_marginTop="8dp"
				android:background="@drawable/header_dot_background"
				android:visibility="gone"/>

			<TextView
				android:id="@+id/header_tv_dot_num_right1"
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:layout_gravity="right|top"
				android:layout_marginRight="4dp"
				android:layout_marginTop="4dp"
				android:background="@drawable/header_dot_background"
				android:gravity="center"
				android:text="0"
				android:textColor="@android:color/white"
				android:textSize="12sp"
				android:visibility="gone"/>
		</FrameLayout>

		<FrameLayout
			android:id="@+id/header_layout_right0"
			android:layout_alignParentRight="true"
			android:layout_width="wrap_content"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/header_tv_right0"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:background="?attr/selectableItemBackground"
				android:ellipsize="end"
				android:gravity="center"
				android:minWidth="?attr/actionBarSize"
				android:padding="8dp"
				android:singleLine="true"
				android:textColor="@android:color/white"
				android:visibility="invisible"/>

			<View
				android:id="@+id/header_v_dot_right0"
				android:layout_width="8dp"
				android:layout_height="8dp"
				android:layout_gravity="right|top"
				android:layout_marginRight="8dp"
				android:layout_marginTop="8dp"
				android:background="@drawable/header_dot_background"
				android:visibility="gone"/>

			<TextView
				android:id="@+id/header_tv_dot_num_right0"
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:layout_gravity="right|top"
				android:layout_marginRight="4dp"
				android:layout_marginTop="4dp"
				android:background="@drawable/header_dot_background"
				android:gravity="center"
				android:text="0"
				android:textColor="@android:color/white"
				android:textSize="12sp"
				android:visibility="gone"/>
		</FrameLayout>

		<LinearLayout
			android:id="@+id/header_layout_title"
			android:layout_width="match_parent"
			android:layout_marginLeft="96dp"
			android:layout_marginRight="96dp"
			android:layout_centerInParent="true"
			android:layout_height="match_parent"
			android:background="?attr/selectableItemBackground"
			android:gravity="center"
			android:orientation="vertical">

			<TextView
				android:id="@+id/header_tv_title"
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:drawablePadding="4dp"
				android:ellipsize="end"
				android:gravity="center"
				android:singleLine="true"
				android:textColor="@android:color/white"
				android:textSize="18sp"
				android:visibility="invisible"/>

			<TextView
				android:id="@+id/header_tv_subtitle"
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:drawablePadding="4dp"
				android:ellipsize="end"
				android:gravity="center"
				android:singleLine="true"
				android:textColor="@android:color/white"
				android:visibility="gone"/>
		</LinearLayout>
		
	</RelativeLayout>
</LinearLayout>